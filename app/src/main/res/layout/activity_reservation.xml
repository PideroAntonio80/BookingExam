            android:textColor="@color/colorBlack"
            android:text="@string/date_in_button_title" />

        <Button
            android:id="@+id/bFechaSalida"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEntradaText"
            android:layout_toEndOf="@id/bFechaEntrada"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/colorLightGrey"
            android:textColor="@color/colorBlack"
            android:text="@string/date_out_button_title" />

        <TextView
            android:id="@+id/tvPrecioTotalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
