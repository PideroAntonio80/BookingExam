            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvEntradaText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/etNumPersonsReserva"
            android:layout_marginTop="12dp"
            android:layout_marginStart="5dp"
            android:textAlignment="center"
            android:text="@string/reservation_entrada_text"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/tvSalidaText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/etNumPersonsReserva"
            android:layout_toEndOf="@id/bFechaEntrada"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:text="@string/reservation_salida_text"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"/>

        <Button
            android:id="@+id/bFechaEntrada"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEntradaText"
            android:layout_marginStart="5dp"
