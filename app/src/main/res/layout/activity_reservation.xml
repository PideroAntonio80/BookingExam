            android:textColor="@color/colorBlack"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_views"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
