            android:layout_marginBottom="15dp"
            android:text="@string/reservation_alojamiento_text"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/icPlane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/icHotelText"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="12dp"
            app:drawableStartCompat="@drawable/ic_reservation_plane" />

        <TextView
            android:id="@+id/icPlaneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/icPlane"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="15dp"
            android:text="@string/reservation_vuelos_text"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/icCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/icPlaneText"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="12dp"
            app:drawableStartCompat="@drawable/ic_reservaton_car" />

        <TextView
            android:id="@+id/icCarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/icCar"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="15dp"
            android:text="@string/reservation_coches_text"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
