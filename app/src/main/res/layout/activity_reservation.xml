            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="@string/reservation_total_prize_title"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/tvPrecioTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bFechaEntrada"
            android:layout_toEndOf="@id/tvPrecioTotalText"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            tools:text="450.50"
            android:inputType="number"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/tvPrecioTotalSimbolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bFechaEntrada"
            android:layout_toEndOf="@id/tvPrecioTotal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="@string/euros_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/tvIvaIncluidoDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPrecioTotal"
            android:layout_toEndOf="@id/tvPrecioTotalText"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/row_list_card_texto_anticipo"
            android:textSize="13sp"
            android:textColor="@color/colorBlack"
            app:drawableStartCompat="@drawable/ic_row_card_check" />

        <TextView
            android:id="@+id/tvCancelacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvIvaIncluidoDescripcion"
            android:layout_toEndOf="@id/tvPrecioTotalText"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/color_verde"
            android:textSize="14sp"
            android:text="@string/row_cancelacion"
            app:drawableStartCompat="@drawable/ic_row_card_list_cancelation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCancelacion"
            android:layout_toEndOf="@id/tvPrecioTotalText"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/row_efectivo_o_tarjeta"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            app:drawableStartCompat="@drawable/ic_row_card_list_credit" />

        <Button
            android:id="@+id/bFinalizar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/finish_reservation_title"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_views"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

