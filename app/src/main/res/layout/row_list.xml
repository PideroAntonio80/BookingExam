<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/rowList"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:weightSum="100"
    android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:weightSum="100"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:paddingLeft="12dp"
                android:gravity="center_vertical"
                android:text="Nombre Hotel"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/tvNombreLocalidad"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:paddingLeft="12dp"
                android:gravity="center_vertical"
                android:text="Nombre Localidad"
                android:textSize="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15" />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:paddingLeft="12dp"
                android:textSize="10sp"
                android:gravity="center_vertical"
                android:text="Categoria:"/>

            <TextView
                android:id="@+id/tvEstrellas"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textSize="10sp"
                android:gravity="center_vertical"
                android:text="nÂº" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.5"
                android:textSize="10sp"
                android:gravity="center_vertical"
                android:text="Estrellas" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:paddingLeft="12dp"
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    android:text="Puntuacion:"/>

                <TextView
                    android:id="@+id/tvPuntuacion"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6.5"
                    android:paddingLeft="5dp"
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    android:text="Puntos"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:paddingLeft="12dp"
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    android:text="Precio Medio:"/>

                <TextView
                    android:id="@+id/tvPrecio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:paddingLeft="5dp"
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    android:text="Precio"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    android:text="Euros" />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>