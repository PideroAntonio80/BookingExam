<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rowBookHotelsListCard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:id="@+id/ivFotoBook"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:weightSum="100"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="35"
                    android:paddingLeft="12dp"
                    android:gravity="center_vertical"
                    tools:text="Nombre Hotel"
                    android:textStyle="bold"
                    android:textSize="30dp"/>

                <TextView
                    android:id="@+id/tvNombreLocalidad"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="25"
                    android:paddingLeft="12dp"
                    android:gravity="center_vertical"
                    tools:text="Nombre Localidad"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="25"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:paddingLeft="12dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:text="@string/booked_title"/>

                    <TextView
                        android:id="@+id/tvEstrellas"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:paddingLeft="5dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        tools:text="nÂº" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.5"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:text="@string/times_title" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>