<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".feature.room.RoomActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRoom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/llLayoutErrorRoom"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvErrorRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layoutError"/>

        <Button
            android:id="@+id/bRetryRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/error_retry"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbLoadingRoom"
        style="?android:attr/progressBarStyle"
        android:layout_width="80dp"
        android:layout_height="80dp" />

</LinearLayout>