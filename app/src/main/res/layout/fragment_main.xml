<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/fragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightGrey"

    tools:context=".feature.main.MainFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#003580"
        app:srcCompat="@drawable/logobueno" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="30sp"
        android:shadowColor="@color/colorBlack"
        android:shadowRadius="15"
        android:shadowDx="5"
        android:shadowDy="5"
        android:text="@string/custom_search_title"
        android:fontFamily="arial"
        android:layout_below="@id/imageView2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@color/colorLightOrange"
        android:layout_below="@id/textView2">

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@id/sLocation"
            android:drawableEnd="@drawable/ic_baseline_search_24"
            android:background="@color/colorWhite"/>

        <Spinner
            android:id="@+id/sLocation"
            android:entries="@array/localidades"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textAlignment="viewStart"
            android:layout_alignParentRight="true"/>

        <LinearLayout
            android:id="@+id/lButtonDates"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:layout_below="@id/sLocation">

            <Button
                android:id="@+id/bDateIn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:textColor="@color/colorBlack"
                android:backgroundTint="@color/colorWhite"
                android:textSize="@dimen/standar_text_size"
                android:text="@string/date_in_button_title" />

            <Button
                android:id="@+id/bDateOut"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:textColor="@color/colorBlack"
                android:backgroundTint="@color/colorWhite"
                android:textSize="@dimen/standar_text_size"
                android:text="@string/date_out_button_title" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bNumberPerson"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_below="@id/lButtonDates">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="192dp"
                android:layout_height="63dp"
                android:gravity="center"
                android:fontFamily="arial"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"
                android:textSize="18sp"
                android:text="@string/people_title" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNumPerson"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_toRightOf="@id/textView3"
                app:boxBackgroundColor="@color/colorWhite"
                app:boxStrokeColor="@color/colorWhite"
                app:hintTextColor="@color/colorBlack"
                app:errorEnabled="true"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietNumPerson"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="30" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/bBuscar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:backgroundTint="@color/button_color"
            android:layout_below="@id/bNumberPerson"
            android:text="@string/search_button"
            android:textSize="20dp"/>

    </RelativeLayout>

</RelativeLayout>